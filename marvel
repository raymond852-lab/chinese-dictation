    <script>
        const sentence1 = "æˆ‘çµ‚æ–¼æ‰¾åˆ°";
        const sentence2 = "æ¼‚äº®çš„æ¨¹è‘‰";

        function setupLine(containerId, text) {
            const container = document.getElementById(containerId);
            
            for (let i = 0; i < text.length; i++) {
                const char = text[i];
                const uniqueId = containerId + '-' + i;
                
                const wrapper = document.createElement('div');
                wrapper.className = 'char-wrapper';

                const charDiv = document.createElement('div');
                charDiv.id = uniqueId;
                charDiv.className = 'char-box';

                const btnAnimate = document.createElement('button');
                btnAnimate.innerText = "ğŸ‘€ çœ‹ç¤ºç¯„";
                btnAnimate.className = "btn-look";

                const btnQuiz = document.createElement('button');
                btnQuiz.innerText = "âœï¸ è‡ªå·±å¯«";
                btnQuiz.className = "btn-write";

                wrapper.appendChild(charDiv);
                wrapper.appendChild(document.createElement('br'));
                wrapper.appendChild(btnAnimate);
                wrapper.appendChild(btnQuiz);
                container.appendChild(wrapper);

                const writer = HanziWriter.create(uniqueId, char, {
                    width: 140,
                    height: 140,
                    padding: 10,
                    strokeColor: '#202020',
                    radicalColor: '#e62429', // éƒ¨é¦–ç´…è‰²
                    showOutline: true,
                    outlineColor: '#c0c0c0',
                    drawingWidth: 22, // ç²—ç­†ç•«ï¼Œå¥½çœ‹æ¸…
                    strokeAnimationSpeed: 0.8, // ç¨æ…¢ï¼Œé©åˆæ–°æ‰‹
                    highlightOnComplete: true,
                    quizStartStrokeColor: '#005f9e'
                });

                btnAnimate.onclick = () => writer.animateCharacter();
                btnQuiz.onclick = () => writer.quiz({
                    onComplete: (summary) => {
                        if (summary.totalMistakes === 0) {
                            alert("ğŸ¦¸â€â™‚ï¸ å“‡ï¼è¶…ç´šè‹±é›„ï¼å®Œå…¨æ­£ç¢ºï¼ğŸŒŸğŸŒŸğŸŒŸ");
                        } else {
                            alert("ğŸ‘ å¾ˆæ£’ï¼å†è©¦ä¸€æ¬¡å°±å®Œç¾äº†ï¼ğŸ’ª");
                        }
                    }
                });
            }
        }

        setupLine('line1', sentence1);
        setupLine('line2', sentence2);
    </script>

